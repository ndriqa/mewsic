<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/primaryLightColor"
        android:padding="@dimen/element_default_padding">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/art"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/cd"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/element_default_padding"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="That song name"
                android:fontFamily="@font/qssemibold"
                android:textColor="@color/primaryTextColor"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="That artist"
                android:textColor="@color/primaryTextColor"
                android:textSize="14sp"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/play_button"
            android:layout_width="@dimen/default_image_button"
            android:layout_height="@dimen/default_image_button"
            android:src="@drawable/ic_play"
            android:background="@drawable/round_corners_1000"
            app:tint="@android:color/black" />
    </LinearLayout>
</layout>